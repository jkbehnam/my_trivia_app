<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/triviaColorPrimary</item>
        <item name="colorPrimaryDark">@color/triviaColorPrimaryDark</item>
        <item name="colorAccent">@color/triviaColorAccent</item>
    </style>

    <style name="tlb"  parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        ....
        <item name="colorControlNormal">@color/triviaColorPrimaryDark</item>
    </style>
    <!-- App Compat Alert Dialog Style -->
    <style name="StyleAppCompatAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
