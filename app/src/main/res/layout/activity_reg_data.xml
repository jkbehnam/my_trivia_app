                            app:boxCornerRadiusTopEnd="@dimen/radiusbox"
                            app:boxCornerRadiusTopStart="@dimen/radiusbox"
                            app:boxStrokeColor="@color/boxStrokeColor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_chainStyle="packed">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/reg_bdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="تاریخ تولد" />

                        </android.support.design.widget.TextInputLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/passwordTextInputLayout_lay"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/radiusbox"
