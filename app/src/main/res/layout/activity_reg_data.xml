                            app:boxCornerRadiusTopEnd="@dimen/radiusbox"
                            app:boxCornerRadiusTopStart="@dimen/radiusbox"
                            app:boxStrokeColor="@color/boxStrokeColor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_chainStyle="packed">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/reg_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="جنسیت" />

                        </android.support.design.widget.TextInputLayout>
                    </TableRow>
                    <TableRow  android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/alert_btn_ok"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_gradiant_grean_background"
                            android:text="تایید"
                            android:textColor="#ffffff"
                            android:textSize="18dp"

                            android:layout_width="match_parent" />

                    </TableRow>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
