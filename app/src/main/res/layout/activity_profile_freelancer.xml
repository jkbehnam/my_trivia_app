<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_3"
    android:clipToPadding="false"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include
            android:id="@+id/toolbar"

            layout="@layout/toolbar_main"
            android:layout_above="@+id/tabs"
            tools:ignore="IncludeLayoutParam"></include>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/grey_5" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:id="@+id/iv_exit"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:tint="@color/toolbar_color"
                    app:srcCompat="@drawable/ic_exit_to_app" />

                <ImageView

                    android:id="@+id/iv_setting"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:tint="@color/toolbar_color"
                    app:srcCompat="@drawable/settings" />

            </TableRow>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:clipToPadding="false">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="@dimen/spacing_xsmall"
                        app:srcCompat="@drawable/boy"
                        app:civ_border="true"
                        app:civ_border_color="@color/grey_10"
                        app:civ_border_width="0.0dip"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0.0" />



                    <ImageView
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/spacing_small"
                        app:srcCompat="@drawable/badge_crown" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بهنام بیگ زاده"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/blue_grey_800"
                        app:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مبتدی"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/blue_grey_300"
                            app:fontFamily="sans-serif-medium" />

                        <View
                            android:layout_width="1.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:background="@color/red_300" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150 پروف"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/grey_40" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_mlarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:text="دستاورد ها"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/blue_grey_500"
                app:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_margin="@dimen/spacing_medium"
                    android:src="@drawable/b1" />

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_margin="@dimen/spacing_medium"
                    android:src="@drawable/b1" />

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_margin="@dimen/spacing_medium"
                    android:src="@drawable/b1" />

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_margin="@dimen/spacing_medium"
                    android:src="@drawable/b1" />

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_margin="@dimen/spacing_medium"
                    android:src="@drawable/b1" />

                <RelativeLayout
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_margin="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/shape_circle"
                        android:tint="@color/grey_10" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="@dimen/spacing_medium"
                        android:tint="@color/grey_60"
                        app:srcCompat="@drawable/b1" />
                </RelativeLayout>
            </LinearLayout>

            <TableRow
                android:id="@+id/tr_report_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tx_pb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="سطح 15"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:id="@+id/pb1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:outlineAmbientShadowColor="@color/red">

                </com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar>

                <ImageView
                    android:id="@+id/prog_face1"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginEnd="5sp"
                    android:src="@drawable/victory_parade" />


            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_mlarge" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آمار"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/blue_grey_500"
                    app:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="70.0dip"
                            android:layout_height="70.0dip"
                            android:padding="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="30"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90"
                                app:fontFamily="sans-serif-medium" />

                            <ProgressBar
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="30"
                                android:progressDrawable="@drawable/circular_progress_bar_blue" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="کامپیوتر"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/grey_60" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="70.0dip"
                            android:layout_height="70.0dip"
                            android:padding="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="90%"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90"
                                app:fontFamily="sans-serif-medium" />

                            <ProgressBar
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="90"
                                android:progressDrawable="@drawable/circular_progress_bar_green" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="زبان"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/grey_60" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="70.0dip"
                            android:layout_height="70.0dip"
                            android:padding="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="80%"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90"
                                app:fontFamily="sans-serif-medium" />

                            <ProgressBar
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="80"
                                android:progressDrawable="@drawable/circular_progress_bar_green" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تاریخ"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/grey_60" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="70.0dip"
                            android:layout_height="70.0dip"
                            android:padding="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="85%"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/grey_90"
                                app:fontFamily="sans-serif-medium" />

                            <ProgressBar
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="85"
                                android:progressDrawable="@drawable/circular_progress_bar_green" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ریاضی"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/grey_60" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="vertical">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.trivia.trivia.my_custom_widgets.my_BarChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="250sp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="8dp" />

                </TableRow>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/spacing_xlarge" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رتبه بندی"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/blue_grey_500"
                    app:fontFamily="sans-serif-medium" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/MyGameMainActivity_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:layout_weight="2"
                    android:scrollbars="vertical">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>