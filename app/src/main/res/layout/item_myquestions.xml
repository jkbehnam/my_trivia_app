<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:elevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false">

    <View
        android:id="@+id/view_"
        android:layout_width="5dp"
        android:layout_height="match_parent"></View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:tint="#D3B1AEAE"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/item_event_tv_main"
            app:layout_constraintEnd_toEndOf="@+id/item_event_tv_main"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/item_event_tv_main"
            app:layout_constraintTop_toTopOf="@+id/item_event_tv_main"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/math_tools" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/q_list_back"

            android:orientation="vertical"></LinearLayout>


        <LinearLayout
            android:id="@+id/lay_sell"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/event_list_rcle"
            app:layout_constraintTop_toTopOf="@+id/event_list_rcle">

            <ImageView
                android:id="@+id/iv_sell"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/menu_dot" />
        </LinearLayout>

        <TextView
            android:id="@+id/iv_obs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:alpha="1"
            android:text="dfdf"
            android:textSize="18dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/item_event_tv_main"
            app:layout_constraintEnd_toEndOf="@+id/item_event_tv_main"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/item_event_tv_main"
            app:layout_constraintTop_toTopOf="@+id/item_event_tv_main"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/event_list_rcle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"

            android:scrollbars="vertical"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintLeft_toRightOf="@+id/lay_sell"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_event_tv_main">

        </androidx.recyclerview.widget.RecyclerView>

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/item_event_tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/event_list_rcle"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
