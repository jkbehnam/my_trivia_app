<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"

    android:id="@+id/main_lay"

    android:foreground="?attr/selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView_news"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintRight_toLeftOf="@+id/imageView_news"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView_news"
            tools:text="The World Global Warming held in Washington" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="10sp"
            android:text="بهنام بیگ زاده"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_news"
            app:layout_constraintRight_toRightOf="@+id/title"
             />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="44dp"
            android:drawablePadding="4dp"
            android:textSize="10sp"
            android:text="15 دقیقه"
            app:layout_constraintBaseline_toBaselineOf="@+id/author"
            app:layout_constraintRight_toLeftOf="@+id/author"
             />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>